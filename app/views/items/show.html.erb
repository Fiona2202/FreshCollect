<h1>It's almost shared!</h1>
<br>
<h3><%= @item.title %></h3>
<%= cl_image_tag @item.photo_or_default, height: 100, width: 180, crop: :fill %>
<br>
<b> <%= @item.description %></b>
<br>
<b>Latest pickup on <%= @item.end_pickup_at.to_time.strftime('%B %e at %l:%M %p') %></b>
<br>
<%= link_to "Edit", edit_item_path if @item.user == current_user %> <%= link_to "Delete", item_path(@item), method: :delete, data: { confirm: "Are you sure?" } if @item.user == current_user %>
<br>
<br>
<div style="width: 100%; height: 300px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
<div class="fixed-bottom bg-light mt-7">
<h3><b>Get the groceries!</b></h3> <%= render "pickups/form", item: @item, pickup: @pickup %>
</div>
