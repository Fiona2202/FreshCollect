<h1>Item detail page</h1>
<br>
<%= cl_image_tag @item.photo.key, height: 200, width: 300, crop: :fill %>
<br>
<b>Title:</b> <%= @item.title %>
<br>
<b>Description:</b> <%= @item.description %>
<br>
<b>Latest pickup:</b> <%= @item.end_pickup_at %>
<br>
<%= link_to "Edit item", edit_item_path if @item.user == current_user %> or <%= link_to "Delete item", item_path(@item), method: :delete, data: { confirm: "Are you sure?" } if @item.user == current_user %>
<br>
<br>
<b>Book the item</b> <%= render "pickups/form", item: @item, pickup: @pickup %>
<br>
