<div class="home-banner pb-5" style="background-color: #74896D;">
  <h1>All items available</h1>
  <ul>
    <% @items.each do |item| %>
      <li><%= item.title %>, <%= link_to 'show details', item %></li>
      <%= cl_image_tag item.photo_or_default, height: 100, width: 100, crop: :fill %>
    <% end %>
  </ul>

  <div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
