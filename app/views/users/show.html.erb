
<div class="container">
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
    <%= link_to "Edit profile", edit_user_path(current_user), class: 'btn btn-primary' if @user == current_user %>
  <br><br>
  <div>
    <p><b>My profile:</b></p>
    <div class="user-info">
      <%= cl_image_tag @user.photo_or_default, height: 250, width: 250, crop: :fill %>
      <%= simple_form_for(@user) do |f| %>
        <fieldset disabled>
        <%= f.input :email %>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>
