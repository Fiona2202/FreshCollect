<div class="home-banner">
  <div class="container pt-5">
    <div class="row justify-content-center">
      <div class="col-lg-6">
      <h5><b>Item: </b><%= @item.title %> / <b>Pickup date: </b><%= @item.end_pickup_at %> </h5>
        <br>
        <h1>Get this item!</h1>
        <br>
        <%= simple_form_for [ @item, @pickup ] do |f| %>
          <%= f.input :arrive_at, html5: true, label: "When do you want to make your pickup" %>
          <%= f.submit class: "btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
