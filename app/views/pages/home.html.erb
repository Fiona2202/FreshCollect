        <%= link_to "Share", new_item_path, class:"btn d-block btn-outline-primary bg-white" %>
      </div>
    </div>

    <div class="carousel-item">
     <img src="<%= asset_path('Icons-2.gif') %>" class="d-block w-100" alt="...">
