<div class="opacity-50 d-flex align-items-stretch pb-2 border-bottom mb-2 position-relative">
  <%= image_tag cl_image_path(completed_item.photo_or_default, height: 50, width: 80, crop: :fill), width: 80, class: "object-fit-cover" %>
  <div class="flex-grow-1 px-3 py-1">
    <h5 class="mb-0"><%= completed_item.title %></h5>
    <div class="text-muted">
      <%= completed_item.status %>
    </div>
    <%= link_to "", item_path(completed_item), class: "stretched-link" %>
  </div>
  <div class="d-flex align-items-center pe-3">
    <i class="fas fa-hands-helping fs-3" style="color: #bbb"></i>
  </div>
</div>
